# ubuntu show return code in terminal prompt -> https://stackoverflow.com/questions/16715103/bash-prompt-with-the-last-exit-code
PROMPT_COMMAND=__prompt_command
__prompt_command() {
    local exitCode="$?"                # This needs to be first
    local exitCodeInPrompt=""

    local psClear='\[\e[0m\]'
    # https://en.wikipedia.org/wiki/ANSI_escape_code#3-bit_and_4-bit
    local Red='\[\e[0;31m\]'
    local Yellow='\[\e[33m\]'
    local BrightMagenta='\[\e[95m\]'

    [ $exitCode != 0 ] && exitCodeInPrompt=" ${Red}${exitCode}${psClear}"

    # python virtual env, however it comes to be
    if [ -z ${VIRTUAL_ENV+x} ]
    then
    VENV_NOTICE=""
    else
    VENV_NOTICE="${BrightMagenta}($(basename "$VIRTUAL_ENV"))${psClear} "
    fi

    local branchName="${Yellow}$(__git_ps1)${psClear}"
    local basePS1="\[\e]0;\u@\h: \w\a\]${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\W\[\033[00m\]"

    PS1="${VENV_NOTICE}${basePS1}${branchName}${exitCodeInPrompt}$ "
}
