# List declared aliases, functions, paths [1]
alias aliases="alias | sed -n 's@=.*@@;/^alias/p'" # display aliases names
alias acats="grep -nT \"### \" $DOTS/alias" # display aliases categories
alias functions="grep -nT '^[a-z].*\(\)' $DOTS/functions" # display the user-defined functions
alias functionsa="functions | sort -k 2 | sed 's@ \{@@'" # display the user-defined functions but in alphabetical order
alias fcats="grep -nT \"###\" $DOTS/functions" # function categories
alias paths='echo -e ${PATH//:/\\n}' # show all the PATH locations on different lines

# Shortcuts {{{
alias _="sudo " # [1]
alias g="git" # [1]
alias gi="git init"
alias gb="git branch"
alias gba="git branch -va"
alias gs="git status"
alias gd="git diff"
alias ga="git add"
alias ga.="git add ."
alias gl="git log"
alias gc="git commit"
alias gp="git push"
alias gco="git checkout"
alias gf="fdate; git fetch"
alias gm="fdate; git merge"
alias gmod="gm origin/develop"
alias gfmod="gf && gmod"
alias gl1s="g log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'" # git log 1 specific; source: https://stackoverflow.com/questions/1838873/visualizing-branch-topology-in-git/34467298#34467298
alias gl1="gl1s --all" # git log 1
alias gignidea='\grep -xq ".idea/" .gitignore || echo ".idea/" >> .gitignore' # ignore .idea/ folder in git
alias gignc="echo -e '/.idea/\n/cmake*/' >> .gitignore" # ignore cmake directories in git


