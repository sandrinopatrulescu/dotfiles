# TODO rnm & rnmu
alias rnm='cat << EOF
for $file in *;
do
    $new_file=$(echo "$file" | sed "s@@@")
    echo "$file -> $new_file"
done
EOF' # from rename (dry-run)
alias rnmu="echo not implemented" # from rename (real, destructive)

