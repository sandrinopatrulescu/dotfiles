alias g="git" # [1]
alias gs="git status"
alias gl="git log"
alias gc="git commit"
alias gp="git push"
alias gco="git checkout"
alias gm="git merge"
alias gl1s="g log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'" # git log 1 specific; source: https://stackoverflow.com/questions/1838873/visualizing-branch-topology-in-git/34467298#34467298
alias gl1="gl1s --all" # git log 1


